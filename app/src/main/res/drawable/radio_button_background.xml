<!-- res/drawable/radio_button_background_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color when selected (light red in this case) -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Default state (unselected) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#A4B289" /> <!-- Background color when unselected (white) -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
